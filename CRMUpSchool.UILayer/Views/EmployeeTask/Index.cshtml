@model List<EmployeeTask>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CRMLayout.cshtml";
    int count = 0;
}


<h3>Görev Listesi</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Durum</th>
        <th>Tarih</th>
        <th>Personel</th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.Status</td>
            <td>@item.Date.ToString("dd.MM.yyyy")</td>
            <td>@item.AppUser.Name @item.AppUser.Surname</td>
            <td><a href="#" class="btn btn-outline-warning">Güncelle</a></td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
        </tr>

    }
</table>

<a href="/EmployeeTask/AddTask/" class="btn btn-outline-primary">Yeni Görev Girişi</a>

@*1. Görev alındı.
    2. Müşteri ile toplantı tarihi belirlendi.
    3. Toplantı yapıldı.
    4. Fiyat belirlendi.
    5. Müşteri onay verdi.
    6. Proje geliştirilmeye başlandı.
    7. Görev tamamlandı.*@

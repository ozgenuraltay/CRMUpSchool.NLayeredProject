@model EmployeeTask
@{
    ViewData["Title"] = "AddTask";
    Layout = "~/Views/Shared/_CRMLayout.cshtml";
}

<br />
<form method="post">
    <label>Personel</label>
    @Html.DropDownListFor(x => x.AppUserID, (List<SelectListItem>)ViewBag.users, new { @class = "form-control" })
    <br />
    <label>Görev Başlığı</label>
    <input type="text" class="form-control" asp-for="Title" />
    <br />
    <label>Görev Detayı</label>
    <textarea rows="5" cols="2" class="form-control" asp-for="Details"></textarea>
    <br />
    <button class="btn btn-outline-primary">Görevi Tanımla</button>
</form>




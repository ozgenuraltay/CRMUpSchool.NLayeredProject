@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CRMLayout.cshtml";
}

<h1>Rol Listesi</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rol Adı</th>
        <th>Rolü Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Role/UpdateRole/@item.Id" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<br />
<a href="/Role/AddRole/" class="btn btn-primary">Yeni Rol Ekle</a>

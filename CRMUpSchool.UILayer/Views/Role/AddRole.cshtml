@model RoleViewModel
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/Shared/_CRMLayout.cshtml";
}

<h1>Yeni Rol Girişi</h1>
<br />

<form method="post"> @*method yerine asp-action yazıp yönlenmesini istediğimiz metodun adını yazarsak isim uyuşmazlığında doğacak (.cshtml ve metod isminin) sorunun önüne geçmiş oluruz.*@
    <label>Rol Adı:</label>
    <input type="text" asp-for="RoleName" class="form-control" />
    <span class="text-danger" asp-validation-for="RoleName"></span>
    <button class="btn btn-primary">Rolü Ekle</button>
</form>

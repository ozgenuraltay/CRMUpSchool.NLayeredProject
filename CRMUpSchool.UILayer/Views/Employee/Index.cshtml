@model List<CRMUpSchool.EntityLayer.Concrete.Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CRMLayout.cshtml";
}

<h1>Personel Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel</th>
        <th>Departman</th>
        <th>Düzenle</th>
        <th>Sil</th>
        <th>Görevler</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EmployeeID</td>
            <td>@item.EmployeeName @item.EmpployeeSurname</td>
            <td>@item.Category.CategoryName</td>
            <td><a href="/Employee/UpdateEmployee/@item.EmployeeID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Employee/DeleteEmployee/@item.EmployeeID" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-outline-dark">Görevler</a></td>
            <td>
                @{
                    if (item.EmployeeStatus == true)
                    {
                    <td>
                        <a href="/Employee/ChangeStatusToFalse/@item.EmployeeID" class="btn btn-outline-warning">Pasif Yap</a>
                    </td>
                }
                else
                {
                    <td>
                        <a href="/Employee/ChangeStatusToTrue/@item.EmployeeID" class="btn btn-outline-danger">Aktif Yap</a>
                    </td>
                }
                }
            </tr>
        }
</table>
<a href="/Employee/AddEmployee/" class="btn btn-primary" style="display:inline-block ; inline-size:150px">Yeni Personel Ekle</a>

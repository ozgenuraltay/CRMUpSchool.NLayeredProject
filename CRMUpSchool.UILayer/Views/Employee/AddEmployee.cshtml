@model Employee
@{
    ViewData["Title"] = "AddEmployee";
    Layout = "~/Views/Shared/_CRMLayout.cshtml";
}

<h1>Yeni Personel</h1>
<form method="post">
    <label>Personel Adı:</label>
    <input type="text" asp-for="EmployeeName" class="form-control" />
    <span asp-validation-for="EmployeeName" class="text-danger"></span>
    <br />
    <label>Personel Soyadı:</label>
    <input type="text" asp-for="EmpployeeSurname" class="form-control" />
    <span asp-validation-for="EmpployeeSurname" class="text-danger"></span>
    <br />
    <label>Personel Mail:</label>
    <input type="text" asp-for="EmployeeMail" class="form-control" />
    <span asp-validation-for="EmployeeMail" class="text-danger"></span>
    <br />
    <label>Personel Fotoğraf:</label>
    <input type="text" asp-for="EmployeeImage" class="form-control" />
    <span asp-validation-for="EmployeeImage" class="text-danger"></span>
    <br />
    <label>Personel Departman:</label>
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control" })
    <span asp-validation-for="CategoryID" class="text-danger"></span>
    <br />
    <button class="btn btn-success">Personeli Kaydet</button>
</form>

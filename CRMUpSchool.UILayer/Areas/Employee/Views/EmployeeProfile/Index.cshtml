@model CRMUpSchool.UILayer.Areas.Employee.Models.UserEditProfileVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h1>Index</h1>

<form method="post" class="form-control" enctype="multipart/form-data">
    <label>
        Adınız:
    </label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>
        Soyadınız:
    </label>
    <input type="text" asp-for="Surname" class="form-control" />
    <br />
    <label>
        Emailiniz:
    </label>
    <input type="text" asp-for="Email" class="form-control" />
    <br />
    <label>
        Telefon Numaranız:
    </label>
    <input type="text" asp-for="PhoneNumber" class="form-control" />
    <br />
    <label>
        Şifreniz:
    </label>
    <input type="password" asp-for="Password" class="form-control" />
    <br />
    <label>
        Şifreniz Tekrar:
    </label>
    <input type="password" asp-for="ConfirmPassword" class="form-control" />
    <br />
    <label>
        Resim Seçiniz:
    </label>
    <input type="file" asp-for="Image" class="form-control" />
    <br />
    <button class="btn btn-success">Kaydet</button>
</form>

